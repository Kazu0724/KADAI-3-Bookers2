<%= flash[:notice] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag(@book.user.get_profile_image(100,100)) %>
      <table class="user-info">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user.id), class: "bth btn-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
      <div>
        <h2>New book</h2>
          <%= form_with model: @new_book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
          <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tbody>
          <tr>
            <td><%= link_to image_tag(@book.user.get_profile_image(100,100)), user_path(@user) %></td>
            <td><%= link_to @book.user.name, user_path(@user) %></td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
