<%= flash[:notice] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tbody>
          <tr>
            <td><%= link_to image_tag(@book.user.get_profile_image(100,100)), user_path(@user) %></td>
            <td><%= link_to @book.user.name, user_path(@user) %></td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
