<%= flash[:notice] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'list', book: @book %>
    </div>

    <div class="col8-md-8 offset-md-1">
      <h1>Book detail</h1>
      <div>
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>
        <p><%= @book.user_name %></p>
        <p><%= @book.title %></p>
        <p><%= @book.body %></p>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
