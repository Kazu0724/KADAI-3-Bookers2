<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'users/list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <div class="container">
          <div class="row">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th colspan="1"></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>

              <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= book.title %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>