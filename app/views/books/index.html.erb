<h1>Books</h1>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="3"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
      <%= @books.each do |book| %>
        <tr>
          <td><%= image_tag 'sample-author1.jpg' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>

  </div>
</div>



