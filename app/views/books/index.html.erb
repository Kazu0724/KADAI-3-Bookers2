<%= render 'users/list', user: @user %>

<h1>Books</h1>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
      <%= @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



