<%= flash[:notice] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'list', book: @book %>
    </div>

    <div class="col8-md-8 offset-md-1">
      <h2>Books</h2>
        <div class="container">
          <div class="row">
            <table class="table table-hover table-inverse">
              <therd>
                <tr>
                  <th colspan="1" ></th>
                  <th>Title</th>
                  <th>Option</th>
                </tr>
              </therd>

              <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= book.title %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>