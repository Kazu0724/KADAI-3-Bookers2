<%= flash[:notice] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag(@user.get_profile_image(100,100)) %>
      <table class="user-info">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(@user.id), class: "bth btn-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <div>
        <h2>New book</h2>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
          <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <div class="container">
          <div class="row">
            <table class="table table-hover table-inverse">
              <therd>
                <tr>
                  <th colspan="1" ></th>
                  <th>Title</th>
                  <th>Option</th>
                </tr>
              </therd>

              <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(@user) %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>