<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="user-info">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(@user.id), class: "bth btn-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <%= render 'list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <div class="container">
          <div class="row">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="1"></th>
                </tr>
              </thead>

              <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_profile_image(100,100) %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
</div>




