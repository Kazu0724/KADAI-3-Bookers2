<div class="container"></div>
  <div class="row"></div>
    <div class="col"></div>
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="user-info">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <%= link_to edit_user_path(user.id), class: "bth btn-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>

